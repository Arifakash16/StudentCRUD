@model Student

@{
    ViewData["Title"] = "HtmlBeginForm";
}

<h1>Using Html BeginForm method</h1>

@using (Html.BeginForm("HtmlBeginForm", "Home", FormMethod.Post, new { @class = "container mt-5", id = "StudentFormData" }))
{
    <div class="form-group">
        @Html.LabelFor(model => model.std_Id, "Student Id", new { @class = "form-label" })
        @Html.TextBoxFor(model => model.std_Id, new { @class = "form-control", placeholder = "Enter your student Id" })
        <span asp-validation-for="std_Id" style="color: red;"></span>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Name, "Name", new { @class = "form-label" })
        @Html.TextBoxFor(model => model.Name, new { @class = "form-control", placeholder = "Enter your Name" })
        <span asp-validation-for="Name" style="color: red;"></span>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Age, "Age", new { @class = "form-label" })
        @Html.TextBoxFor(model => model.Age, new { @class = "form-control", placeholder = "Enter your Age" })
        <span asp-validation-for="Age" style="color: red;"></span>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Email, "Email", new { @class = "form-label" })
        @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "Enter your Email" })
        <span asp-validation-for="Email" style="color: red;"></span>
    </div>

    <div class="form-group mt-2">
        <button type="submit">Submit</button>
    </div>
}
