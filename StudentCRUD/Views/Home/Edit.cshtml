@model Student
@{
    ViewData["Title"] = "Edit";
}

<form asp-action="EditUpdate" asp-controller="Home" asp-route-id="@Model.Id"  id="StudentEdit" mehod="post" class="container mt-5">
    
    <div class="form-group">
        <label for="std_Id" class="form-label">Student Id</label>
        <input type="text" id="std_Id" asp-for="@Model.std_Id" name="std_Id" class="form-control" placeholder="Enter your Name">
    </div>

    <div class="form-group">
        <label for="Name" class="form-label">Name</label>
        <input type="text" id="Name" asp-for="Name" name="Name" class="form-control" placeholder="Enter your Name">
    </div>

    <div class="form-group">
        <label for="Age" class="form-label">Age</label>
        <input type="text" id="Age" asp-for="Age" name="Age" class="form-control" placeholder="Enter your Age">
    </div>

    <div class="form-group">
        <label for="Email" class="form-label">Email</label>
        <input type="text" id="Email" asp-for="Email" name="Email" class="form-control" placeholder="Enter your Email">
    </div>


    <div class="form-group mt-2">
        <input type="submit" value="Submit" class="btn btn-primary">
    </div>
</form>

